<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#63BEBC">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_oneside"
        android:padding="15dp">

        <!-- Menu Button -->
        <ImageButton
            android:id="@+id/menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:contentDescription="@string/menu_icon"
            android:scaleType="centerCrop"
            android:src="@drawable/menu" />

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/menu"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <!-- Profile Name -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/profile_image"
            android:layout_alignTop="@id/profile_image"
            android:layout_margin="20dp"
            android:text="Emma Phillips"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Profile Section -->
        <LinearLayout
            android:id="@+id/profile_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/profile_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/arrow2"
                android:contentDescription="arrow" />
        </LinearLayout>

        <!-- Orders Section -->
        <LinearLayout
            android:id="@+id/orders_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_section"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/orders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your Orders"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/orders_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/arrow2"
                android:contentDescription="@string/arrow6" />
        </LinearLayout>

        <!-- Saved Addresses Section -->
        <LinearLayout
            android:id="@+id/saved_addresses_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orders_section"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/saved_addresses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Saved Addresses"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/saved_addresses_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/arrow2"
                android:contentDescription="@string/arrow4" />
        </LinearLayout>

        <!-- Settings Section -->
        <LinearLayout
            android:id="@+id/settings_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/saved_addresses_section"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/arrow2"
                android:contentDescription="@string/arrow4" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>